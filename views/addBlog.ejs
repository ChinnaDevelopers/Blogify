<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Add Blog</title>
  </head>
  <body class="bg-dark">
    <%- include('./partials/nav') %>

    <div class="container mt-5">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="card bg-body-tertiary bg-dark">
            <div class="card-header">
              <h3 class="text-center">Add Blog</h3>
            </div>
            <div class="card-body">
              <form
                action="/blog/addBlog"
                method="POST"
                enctype="multipart/form-data"
              >
                <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="content" class="form-label">Content</label>
                  <textarea
                    class="form-control"
                    id="content"
                    name="content"
                    rows="3"
                    required
                  ></textarea>
                </div>
                <div class="mb-3">
                  <label for="image" class="form-label">Image</label>
                  <input
                    type="file"
                    class="form-control"
                    id="image"
                    name="image"
                    required
                  />
                </div>
                <button type="submit" class="btn btn-primary">Add Blog</button>
                <a class="btn btn-danger float-end" href="/user/profile">
                  Cancel
                </a>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/script') %>
  </body>
</html>

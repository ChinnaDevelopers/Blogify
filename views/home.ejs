<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Home Page</title>
  </head>
  <body class="bg-dark">
    <%- include('./partials/nav') %>

    <script>
      function toggleAuthDiv(page) {
        var signin = document.getElementById("signin");
        var signup = document.getElementById("signup");
        if (page === "signin") {
          signin.style.display = "block";
          signup.style.display = "none";
        } else if (page === "signup") {
          signup.style.display = "block";
          signin.style.display = "none";
        }
      }
    </script>

    <% if(user) { %>

    <div class="container mt-5" id="card">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="card bg-body-tertiary">
            <div class="card-header">
              <h3 class="text-center">Your Blogs</h3>
            </div>
            <% if(blogs.length === 0) { %>
            <div class="card-body">
              <h5 class="text-center">You have not created any blog yet.</h5>
            </div>
            <% } else { %>
            <div class="card-body">
              <% for(let i = 0; i < blogs.length; i++) { %> <% if(i % 4 === 0) {
              %>
              <div class="row">
                <% } %>
                <div class="col-md-3">
                  <a
                    href="/blog/<%= blogs[i]._id %>"
                    class="text-decoration-none text-dark"
                  >
                    <div class="card mb-3">
                      <img
                        src="<%= blogs[i].image %>"
                        class="card-img-top"
                        alt="cover"
                      />
                      <div class="card-body">
                        <h5 class="card-title"><%= blogs[i].title %></h5>
                      </div>
                    </div>
                  </a>
                </div>
                <% if(i % 4 === 3 || i === blogs.length - 1) { %>
              </div>
              <!-- end of row -->
              <% } %> <% } %>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <% } %> <%- include('./partials/script') %>
  </body>
</html>
